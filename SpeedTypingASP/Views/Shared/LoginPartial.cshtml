<div class="auth">
    <div class="container">
        <div class="auth___container">
            <div class="auth__wrapper">
                <h2 class="auth__heading">Вход</h2>
                <form method="POST" class="auth__form">
                    <input type="text" class="auth__input-text" placeholder="Логин">
                    <input type="password" class="auth__input-text" placeholder="Пароль">

                    <div class="auth__bottom">
                        <div class="auth__remember-me">
                            <input type="checkbox" class="auth__check-box">
                            <div class="auth__remember-me-text">
                                Запомнить меня?
                            </div>
                        </div>
                        <input type="submit" class="auth__button" value="Войти">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>