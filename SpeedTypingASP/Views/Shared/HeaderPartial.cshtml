@using Microsoft.AspNetCore.Http.Extensions
@inject UserManager<UserInformation> UserManager
@inject SignInManager<UserInformation> SignInManager
@{
    var request = Context.Request;
}
<header class="header">
    <div class="container">
        <div class="header__top">
            <a href="/" class="logo">
                <div class="logo__image">
                    keyboard_alt
                </div>
                <div class="logo__text">
                    <div class="logo__top-text">
                        speed
                    </div>
                    <div class="logo__main-text">
                        typing
                    </div>
                </div>
            </a>
            <div class="header__sign-buttons">
                @if (SignInManager.IsSignedIn(User))
                {
                    @if (User.IsInRole("admin"))
                    {
                        <a class="sign-button"
                           asp-area="admin"
                           asp-controller="Home"
                           asp-action="Index">
                            Панель администратора
                        </a>
                    }
                    <a class="sign-button"
                       asp-area=""
                       asp-controller="Account"
                       asp-action="PersonalAccount">
                        @User.Identity.Name
                    </a>
                }
                else
                {
                    <a class="sign-button"
                       asp-controller="Account"
                       asp-action="Login"
                       asp-route-returnUrl="@request.GetDisplayUrl()">
                        Вход
                    </a>
                    <a class="sign-button"
                       asp-controller="Account"
                       asp-action="Register"
                       asp-route-returnUrl="@request.GetDisplayUrl()">
                        Регистрация
                    </a>
                }
            </div>
        </div>
    </div>
</header>